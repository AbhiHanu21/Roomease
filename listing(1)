    <script>
        function filterProperties() {
            let input = document.querySelector('.search-box').value.toLowerCase();
            let properties = document.querySelectorAll('.property');
            properties.forEach(property => {
                let title = property.querySelector('h3').innerText.toLowerCase();
                property.style.display = title.includes(input) ? 'block' : 'none';
            });
        }
        
        function toggleDetails(element) {
            let details = element.querySelector('.property-details');
            details.style.display = details.style.display === 'block' ? 'none' : 'block';
        }
        
        function filterProperties() {
            let input = document.getElementById('search-input').value.toLowerCase();
            let properties = document.querySelectorAll('.property');
            properties.forEach(property => {
                let title = property.querySelector('h3').innerText.toLowerCase();
                let location = property.querySelector('p').innerText.toLowerCase();
                property.style.display = title.includes(input) || location.includes(input) ? 'block' : 'none';
            });
        }
        
        function toggleDetails(element) {
            let details = element.querySelector('.property-details');
            details.style.display = details.style.display === 'block' ? 'none' : 'block';
        }
        
        function fetchUserLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition, showError);
            } else {
                alert("Geolocation is not supported by this browser.");
            }
        }

        function showPosition(position) {
            let latitude = position.coords.latitude;
            let longitude = position.coords.longitude;
            
            fetch(`http://localhost:3000/properties?lat=${latitude}&lng=${longitude}`)
                .then(response => response.json())
                .then(data => {
                    displayProperties(data);
                    filterPropertiesByLocation(data);
                })
                .catch(error => console.error('Error fetching properties:', error));
        }

        function showError(error) {
            alert("Unable to retrieve location. Please enable location services.");
        }

        function displayProperties(properties) {
            let propertiesContainer = document.getElementById('properties-container');
            propertiesContainer.innerHTML = "";
            
            properties.forEach(property => {
                let div = document.createElement('div');
                div.classList.add('property');
                div.setAttribute('data-location', property.location.toLowerCase());
                div.innerHTML = `
                    <h3>${property.name}</h3>
                    <p>${property.location}</p>
                    <p>Price: ${property.price}</p>
                `;
                propertiesContainer.appendChild(div);
            });
        }

        function filterProperties() {
            let userInput = document.getElementById('search-input').value.toLowerCase();
            let properties = document.querySelectorAll('.property');
            
            properties.forEach(property => {
                let location = property.getAttribute('data-location');
                if (location.includes(userInput)) {
                    property.style.display = "block";
                } else {
                    property.style.display = "none";
                }
            });
        }

        function filterPropertiesByLocation(properties) {
            if (properties.length > 0) {
                let userLocation = properties[0].location.toLowerCase(); // Assuming first property as reference location
                let propertiesList = document.querySelectorAll('.property');
                
                propertiesList.forEach(property => {
                    let location = property.getAttribute('data-location');
                    if (location.includes(userLocation)) {
                        property.style.display = "block";
                    } else {
                        property.style.display = "none";
                    }
                });
            }
        }
    </script>
